{
	"private": true,
	"name": "avion",
	"description": "Fast and easy file transfer without the NSA.",
	"version": "0.3.0",
	"keywords": [
		"avion",
		"transfer",
		"files",
		"webrtc",
		"p2p"
	],
	"author": "Jannis R <mail@jannisr.de>",
	"homepage": "https://github.com/derhuerst/avion",
	"repository": "derhuerst/avion",
	"issues": "https://github.com/derhuerst/avion/issues",
	"license": "ISC",
	"dependencies": {
		"alphanumeric-id": "^1.0.1",
		"blob-to-buffer": "^1.2.6",
		"buffer-to-arraybuffer": "^0.0.5",
		"file-saver": "^2.0.0",
		"files-sync-stream": "^0.3.0",
		"signalhub": "^4.8.0",
		"simple-peer": "^9.1.2",
		"virtual-dom": "^2.1.1"
	},
	"devDependencies": {
		"@babel/core": "^7.1.6",
		"@babel/preset-env": "^7.1.6",
		"babelify": "^10.0.0",
		"browserify": "^17.0.0",
		"uglify-es": "^3.0.12",
		"wzrd": "^1.5.0"
	},
	"browserify": {
		"transform": [
			[
				"babelify",
				{
					"presets": [
						"@babel/preset-env"
					],
					"global": true
				}
			]
		]
	},
	"scripts": {
		"build": "browserify index.js | uglifyjs -mc > bundle.min.js",
		"prepublishOnly": "npm run build",
		"dev": "wzrd index.js:bundle.min.js -- --debug"
	}
}
