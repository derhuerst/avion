{
	"name":        "avion",
	"description": "Fast and easy file transfer without the NSA.",
	"version":     "0.2.0",
	"keywords":    ["avion", "transfer", "files", "webrtc", "p2p"],
	"author": "Jannis R <mail@jannisr.de>",
	"homepage":    "https://github.com/derhuerst/avion",
	"repository":  "derhuerst/avion",
	"issues":      "https://github.com/derhuerst/avion/issues",
	"license":     "ISC",
	"dependencies": {
		"signalhub": "^4.7.4",
		"simple-peer": "^6.0.4"
	},
	"devDependencies": {
		"browserify": "^13.0.1",
		"uglify-js": "^2.6.4",
		"wzrd": "^1.4"
	},
	"scripts": {
		"bundle": "browserify avion.js -o bundle.js",
		"uglify": "uglifyjs -mc --mangle-props --screw-ie8 -o bundle.min.js -- bundle.js",
		"build": "npm run bundle; npm run uglify",
		"prepublish": "npm run build",
		"dev":   "wzrd avion.js:bundle.js -- --debug"
	}
}
